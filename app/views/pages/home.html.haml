%h2.heading CONTROVERSIAL ARTICLES
%ul
    -@article_array.each do |x_1|
        %li.article-display
            =x_1["title"]
            %br
            %a{ :href => "/#{x_1["section"]}", :target => "_blank" }
                =x_1["section"]
            %br
            Published:
            =x_1["publish_date"]
            %br
            =link_to "Comments: #{x_1.comments.length}", article_path( x_1.id ), target: "_blank"
            %br
            =link_to "#{x_1['url']}", x_1['url'], target: "_blank"
%h2.heading LATEST HEADLINES
%ul
    -@results["response"]["results"].each do |x|
        %li.article-query
            =x["webTitle"]
            %br
            %a{ :href => "/#{x["sectionName"]}" }
                ="#{x["sectionName"]}"
            %br
            Published:
            =x["webPublicationDate"]
            %br
            =link_to "Be the first to comment", article_comment_path(x['id'])
            %br
            %a{ :href => "#{x["webUrl"]}", :target => "_blank" }
                =x["webUrl"]