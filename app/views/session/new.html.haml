%h2.heading Login
    -if flash[:errors]
    %p.error_message="#{flash[:errors]}"

=form_tag, :html => { :class => "registration_form" } login_path do
    =label_tag (:email)
    =email_field_tag :email, nil
    %br
    =label_tag (:password)
    =password_field_tag :password, nil
    %br
    =submit_tag 'Login'