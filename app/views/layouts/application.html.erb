<!DOCTYPE html>
<html>
  <head>
    <title>Politi-fight</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>
  <nav class="main-nav">
    <ul class="main-nav-list">
      <li class="nav-list-elements"><%= link_to 'Home', root_path %></li>
      <li class="nav-list-elements">
        <%= form_tag(search_path, method: :get) do %>
          <%= text_field_tag :search_query %>
          <%= submit_tag 'Search' %>
        <% end %>
      </li>
      <li class="nav-list-elements"><%= link_to 'About', about_path %></li>
      <% if @current_user.present? %>
        <li class="nav-list-elements">Welcome back, <%= @current_user.username %></li>
        <li class="nav-list-elements"><%= link_to 'Profile', user_path( @current_user.id ) %></li>
        <li class="nav-list-elements"><%= link_to 'Logout', login_path, method: :delete %></li>
      <% else %>
        <li class="nav-list-elements"><%= link_to 'Login', login_path %></li>      
        <li class="nav-list-elements"><%= link_to 'Register', new_user_path %></li>
      <% end %>
    </ul>
  </nav>
  <div class="main-wrapper">
  <h1 class="main-header">Politi-fight!</h1>
    <%= yield %>
  </div>
  </body>
</html>
