%h2.heading Profile information
%hr
%ul.deets
    %li
        ="First name: #{@user.first_name}"
    %br
    %li
        ="Last name: #{@user.last_name}"
    %br
    %li
        ="Email: #{@user.email}"
    %br
    %li
        =cl_image_tag(@user.image)
    %br
    =link_to "Edit details", edit_user_path, class: "button-edit"
    %br
    %br
%h2.heading Your discussions
%p.user_info
    -if @user_subjects.length == 0
        ="You are currently not participating in any discussions."
    -else
        %ul
            -@user_arguments.each do |key, val|
                %li
                    =link_to "#{key}", article_path( val )
                %br
%h2.heading Your comments
%p.user_info
    -if @user_comments.length == 0
        ="You currently do not have any comments."
    -else
        %ul
            -@user_comments.each do |cmt|
                %li
                    =link_to "#{cmt.text_body}", article_path( cmt.article_id )
                %br